---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
  <span slot="title">Jobs board — PrimerPaso</span>

  <main class="container main-grid">
    <aside class="sidebar">
      <div class="card profile-card">
        <div class="avatar">AB</div>
        <h3>Ana B.</h3>
  <p class="muted">Engineering student — National University</p>
  <p class="small">Looking for frontend & UX internships.</p>
        <div class="meta"><span>Disponibilidad: Inmediata</span></div>
        <button class="btn full primary">Editar perfil</button>
      </div>
      <div class="card stats">
        <h4>Find jobs</h4>
        <ul>
          <li><strong>120</strong> Active listings</li>
          <li><strong>45</strong> Companies</li>
          <li><strong>30</strong> Remote</li>
        </ul>
      </div>
    </aside>

    <section class="feed">
      <div class="hero card">
  <h1>Jobs board for students</h1>
  <p class="muted">Jobs, internships and scholarships aimed at university students.</p>
        <div class="search-row">
          <input id="searchInput" type="search" placeholder="Search: title, company or location" />
          <select id="filterLocation"><option value="">Any location</option><option>Remote</option><option>On-site</option></select>
          <button id="searchBtn" class="btn primary">Search</button>
        </div>
      </div>
      <div id="jobsList" class="jobs-list"></div>
    </section>

    <aside class="aside-right">
  <div class="card suggestions"><h4>Featured companies</h4><ul><li>DataLabs</li><li>Creative Agency</li><li>FinTech Hub</li></ul></div>
      <div class="card tips"><h4>Consejos rápidos</h4><ol><li>Completa tu perfil al 100%.</li><li>Adjunta tu CV en PDF.</li><li>Configura alertas por email.</li></ol></div>
    </aside>
  </main>

  <!-- modal element kept for client JS -->
  <div id="modal" class="modal hidden"><div class="modal-content"><button id="closeModal" class="modal-close">✕</button><div id="modalBody"></div></div></div>

  <script type="module" src="/js/app.js"></script>
</BaseLayout>
