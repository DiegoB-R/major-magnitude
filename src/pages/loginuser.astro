---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
  <span slot="title">Sign in â€” PrimerPaso</span>

  <main class="container login-container">
    <section class="login-card card">
      <div class="logo-hero">
        <div class="logo">Primer<span>Paso.com</span></div>
  <p class="muted">Jobs board for students</p>
      </div>

  <form id="loginForm" class="login-form" novalidate>
  <label for="email">Email</label>
  <input id="email" name="email" type="email" placeholder="you@university.edu" required />

  <label for="password">Password</label>
  <input id="password" name="password" type="password" placeholder="Password" minlength="6" required />

  <div class="form-row between"><label class="checkbox"><input id="remember" type="checkbox" /><span>Remember me</span></label><a class="muted small" href="#">Forgot your password?</a></div>

  <!-- Use a real submit button so the form JS can intercept and persist 'remember' -->
  <button type="submit" class="btn primary full">Sign in</button>

        <div class="divider"><span>o</span></div>

        <div class="socials">
          <button type="button" class="btn ghost full" aria-label="Iniciar con Google">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.94 11c-.04-.69-.1-1.38-.1-2.06C20.84 4.2 16.84.2 12.24.2S3.64 4.2 3.64 8.94c0 .68.06 1.37.1 2.06H12v4h-3.35a6.23 6.23 0 0 1-5.58 3.65A6.5 6.5 0 0 1 9.2 13H3.1a10.4 10.4 0 0 0 18.8 0h-6.14a4.17 4.17 0 0 0 3.3-2h3.84z"></path></svg>
            <span>Sign in with Google</span>
          </button>
          <button type="button" class="btn ghost full" aria-label="Iniciar con GitHub">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
            <span>Sign in with GitHub</span>
          </button>
        </div>

  <p class="muted small center">Don't have an account? <a href="/signupuser">Sign up</a></p>
      </form>
    </section>
  </main>

  <script type="module" src="/login/login.js"></script>
</BaseLayout>
