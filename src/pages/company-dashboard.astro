---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Company dashboard | PrimerPaso">
  <main class="container" style="padding:2rem 0">
    <div class="dash-header" style="display:flex;justify-content:space-between;align-items:center;margin-bottom:18px">
      <div>
        <h1 style="margin:0">My dashboard</h1>
        <p class="muted" style="margin:4px 0 0">Your published jobs and drafts</p>
      </div>
      <div>
        <a class="btn primary" href="/company-jobs/new">Post a new job</a>
      </div>
    </div>

    <section id="jobsList">
      <p class="muted">Loading jobsâ€¦</p>
    </section>
  </main>

  <script type="module" src="/js/company-jobs.js"></script>

  <style>
    .muted{color:var(--muted,#6b6b6b)}
    .btn.primary{background:linear-gradient(90deg,var(--morado,#4b2b88),#4b2b88);color:#fff;padding:8px 12px;border-radius:8px;text-decoration:none}
    .job-card{border:1px solid rgba(0,0,0,0.06);padding:12px;border-radius:10px;margin-bottom:12px;display:flex;justify-content:space-between;gap:12px}
    .job-meta{color:#666;font-size:13px}
    .job-actions a, .job-actions button{margin-left:8px}
    .empty{padding:18px;border-radius:10px;background:#fff;border:1px dashed rgba(0,0,0,0.04)}
  </style>
</Layout>
