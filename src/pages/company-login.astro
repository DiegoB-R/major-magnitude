---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <span slot="title">Company login — PrimerPaso</span>

  <main class="container">
    <section class="company-login">
      <div class="login-card card">
        <div class="logo-hero">
          <!-- The 'Paso.com' part will use the --morado color in CSS for a purple accent -->
          <div class="logo">Primer<span>Paso.com</span></div>
          <p class="muted">Company panel — professional access</p>
        </div>

        <form id="companyLoginForm" class="login-form" novalidate>
          <label for="companyEmail">Company email</label>
          <input id="companyEmail" name="email" type="email" placeholder="contact@company.com" required />

          <label for="companyPassword">Password</label>
          <input id="companyPassword" name="password" type="password" placeholder="Password" required />

          <button type="submit" class="btn primary full">Sign in</button>

          <p class="muted small center" style="margin-top:12px">Don't have an account? <a href="/company-signup">Sign up</a></p>
        </form>
      </div>
    </section>
  </main>

  <script type="module" src="/login/company-login.js"></script>
</BaseLayout>

<style>
  /* Center the company login card horizontally and vertically (below header) */
  .company-login{display:flex;align-items:center;justify-content:center;min-height:calc(100vh - 88px);padding:48px 0}
  .company-login .login-card{max-width:520px;width:100%;margin:0}
  @media (max-width:640px){
    .company-login{min-height:calc(100vh - 72px);padding:28px 16px}
    .company-login .login-card{padding:20px}
  }
</style>
