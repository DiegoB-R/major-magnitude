---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <span slot="title">Student signup â€” PrimerPaso</span>

  <main class="container login-container">
    <section class="login-card card">
      <div class="logo-hero">
        <div class="logo">Primer<span>Paso.com</span></div>
  <p class="muted">Create your student account</p>
      </div>

      <form id="signupForm" class="login-form" novalidate>
  <label for="firstName">First name</label>
  <input id="firstName" name="firstName" type="text" placeholder="Your first name" required />

  <label for="lastName">Last name</label>
  <input id="lastName" name="lastName" type="text" placeholder="Your last name" required />

  <label for="email">Email</label>
  <input id="email" name="email" type="email" placeholder="you@university.edu" required />

  <label for="password">Password</label>
  <input id="password" name="password" type="password" placeholder="Create a secure password" minlength="8" required />

    <button type="submit" class="btn primary full">Create account</button>

  <p class="muted small center" style="margin-top:16px">Already have an account? <a href="/loginuser">Sign in</a></p>
      </form>
    </section>
  </main>

  <script type="module" src="/signup/signup.js"></script>
</BaseLayout>

<style>
  /* Center the student signup card similar to company login */
  .login-container{display:flex;align-items:center;justify-content:center;min-height:calc(100vh - 88px);padding:48px 0}
  .login-card{max-width:560px;width:100%;margin:0;padding:28px}
  .logo-hero .logo{font-size:20px;margin-bottom:6px}
  .logo-hero p.muted{margin:0 0 14px 0}
  .login-form label{display:block;margin:10px 0 6px;font-weight:600}
  .login-form input{width:100%;padding:12px;border-radius:8px;border:1px solid rgba(11,23,39,0.08);box-sizing:border-box}
  .btn.primary.full{display:inline-block;margin-top:14px}
  .muted.small.center a{color:var(--morado,#4b2b88);font-weight:600}

  @media (max-width:640px){
    .login-card{padding:18px}
    .login-container{min-height:calc(100vh - 72px);padding:28px 12px}
  }
</style>
