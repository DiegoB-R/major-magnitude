---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <span slot="title">My profile â€” PrimerPaso</span>

  <main class="container login-container">
    <section class="login-card card">
        <div class="logo-hero">
        <div class="logo">Student <span>profile</span></div>
        <p class="muted">Complete or edit your profile so companies can find you.</p>
      </div>

      <form id="profileForm" class="login-form" novalidate>
        <div class="two-col">
          <div>
            <label for="firstName">First name</label>
              <input id="firstName" name="firstName" type="text" placeholder="Your first name" />

              <label for="lastName">Last name</label>
              <input id="lastName" name="lastName" type="text" placeholder="Your last name" />

              <label for="email">Email</label>
              <input id="email" name="email" type="email" placeholder="you@university.edu" />

              <label for="phone">Phone</label>
              <input id="phone" name="phone" type="tel" placeholder="+1 555 555 5555" />

              <label for="university">University</label>
              <input id="university" name="university" type="text" placeholder="University" />

              <label for="degree">Degree</label>
              <input id="degree" name="degree" type="text" placeholder="Computer Engineering" />
          </div>

          <div>
            <label for="gradYear">Graduation year</label>
            <input id="gradYear" name="gradYear" type="number" placeholder="2025" />

            <label for="skills">Skills (comma separated)</label>
            <input id="skills" name="skills" type="text" placeholder="JavaScript, Python, SQL" />

            <label for="experience">Years of experience</label>
            <input id="experience" name="experience" type="number" placeholder="0" />

            <label for="linkedin">LinkedIn</label>
            <input id="linkedin" name="linkedin" type="url" placeholder="https://linkedin.com/in/your-profile" />

            <label for="portfolio">Portfolio / GitHub</label>
            <input id="portfolio" name="portfolio" type="url" placeholder="https://github.com/your-username" />

          </div>
        </div>

  <label for="bio">Summary / About</label>
  <textarea id="bio" name="bio" rows="4" placeholder="A short summary about your experience and goals"></textarea>

        <div style="display:flex;gap:12px;margin-top:12px">
          <button type="submit" class="btn primary">Save profile</button>
          <a class="btn ghost" href="/integradora">Cancel</a>
        </div>
      </form>
    </section>
  </main>

  <script type="module" src="/profile/perfiluser.js"></script>

  <style>
    .login-container{display:flex;align-items:center;justify-content:center;min-height:calc(100vh - 88px);padding:48px 0}
    .login-card{max-width:900px;width:100%;margin:0;padding:28px}
    .logo-hero .logo{font-size:20px;margin-bottom:6px}
    .logo-hero p.muted{margin:0 0 14px 0}
    .two-col{display:grid;grid-template-columns:1fr 1fr;gap:18px}
    .login-form label{display:block;margin:10px 0 6px;font-weight:600}
    .login-form input,.login-form textarea{width:100%;padding:12px;border-radius:8px;border:1px solid rgba(11,23,39,0.08);box-sizing:border-box}
    .btn.primary{padding:10px 16px}
    @media (max-width:900px){.two-col{grid-template-columns:1fr}}
  </style>
</BaseLayout>
